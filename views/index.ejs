<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="stylesheet" href="/commonStyle.css">
	<link rel="stylesheet" href="/styles/index.css">
	<script src="/scripts/index.js" defer></script>
	<title>Index</title>
</head>
<body>
	<header>
		<h1>Inventory Store</h1>
		<div class="elements">
			<div class="search">
				<form action="/search" method="get">
					<input type="text" name="q" oninput="sendHeader.sendForm()">
				</form>
			</div>
			<%- include( "components/dropDown.ejs" , { name: "Groups" , attr:locals.groups }) %>
				<%- include("components/dropDown.ejs", { name: "Tags" , attr:locals.genres }) %>
		</div>
	</header>
	<main>
		<div class="search">
			<form action="/search" method="get">
				<input type="text" name="q" oninput="sendMain.sendForm()">
			</form>
		</div>
		<% if(locals.items) { %>
			<% items.forEach(item => { %>
				<%- include("components/card.ejs", {item}) %>
			<% }); %>
		<% } %>
	</main>
</body>
</html>